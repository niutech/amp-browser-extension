{
  "manifest_version": 2,
  "name": "AMP Browser Extension",
  "short_name": "AMP Browser",
  "description": "Accelerate web browsing by automatically loading AMP or MIP versions of web pages, saving data and bandwidth.",
  "version": "1.0",
  "author": "AMP Browser",
  "homepage_url": "http://ampbrowser.com",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "img/icon-inactive48.png",
    "default_title": "No AMP HTML detected"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
